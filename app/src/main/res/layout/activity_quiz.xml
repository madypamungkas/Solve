<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".QuizActivity">

    <LinearLayout
        android:id="@+id/soalLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorPrimary"
        android:orientation="vertical"
        android:visibility="gone">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.55">

            <ImageView
                android:id="@+id/imgQuiz"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_55sdp"
                android:src="@drawable/bg_quiz" />

            <androidx.cardview.widget.CardView
                android:id="@+id/soalCV"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/imgQuiz"
                android:layout_marginBottom="@dimen/_8sdp"
                android:layout_marginEnd="@dimen/_10sdp"
                android:layout_marginStart="@dimen/_10sdp"
                app:cardBackgroundColor="@color/colorAccent"
                app:cardCornerRadius="@dimen/_18sdp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <RelativeLayout
                        android:id="@+id/layoutTop"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/txtQuestion"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:layout_marginStart="@dimen/_12sdp"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:fontFamily="@font/rubik_light"
                            android:text="@string/question"
                            android:textAlignment="center"
                            android:textColor="@color/white"
                            android:textSize="@dimen/_10ssp" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:layout_below="@+id/txtQuestion"
                            android:layout_marginStart="@dimen/_12sdp"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/number"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/rubik_medium"
                                android:text="1"
                                android:textAlignment="center"
                                android:textColor="@color/white"
                                android:textSize="@dimen/_15ssp" />

                            <TextView
                                android:id="@+id/sum"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/rubik_medium"
                                android:text="/40"
                                android:textAlignment="center"
                                android:textColor="@color/white"
                                android:textSize="@dimen/_15ssp" />
                        </LinearLayout>

                        <TextView
                            android:id="@+id/gameName"
                            android:layout_width="@dimen/_140sdp"
                            android:layout_height="wrap_content"
                            android:layout_alignParentTop="true"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:fontFamily="@font/rubik_medium"
                            android:text=" Hangeul Konsonan"
                            android:textAlignment="center"
                            android:textColor="@color/white"
                            android:textSize="@dimen/_13ssp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/gameName"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:text="00"
                            android:visibility="gone"
                            android:textAlignment="center"
                            android:textColor="@color/white"
                            android:textSize="@dimen/_18ssp" />

                        <TextView
                            android:id="@+id/txtScore"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_marginEnd="@dimen/_12sdp"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:fontFamily="@font/rubik_light"
                            android:text="waktu"
                            android:textAlignment="center"
                            android:textColor="@color/white"
                            android:textSize="@dimen/_10ssp" />

                        <TextView
                            android:id="@+id/timer"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_below="@+id/txtScore"
                            android:layout_marginEnd="@dimen/_12sdp"
                            android:fontFamily="@font/rubik_medium"
                            android:text="0"
                            android:textAlignment="center"
                            android:textColor="@color/white"
                            android:textSize="@dimen/_16ssp" />

                    </RelativeLayout>
                    <RelativeLayout
                        android:id="@+id/imgLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/layoutTop">
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:maxHeight="@dimen/_10sdp">

                        </ImageView>


                    </RelativeLayout>

                    <androidx.core.widget.ContentLoadingProgressBar
                        android:id="@+id/loading"
                        android:layout_width="@dimen/_40sdp"
                        android:layout_height="@dimen/_40sdp"
                        android:layout_centerInParent="true" />


                    <RelativeLayout
                        android:id="@+id/textLayout"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_centerInParent="true"
                        android:layout_centerVertical="true"
                        android:layout_below="@+id/imgLayout">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:weightSum="5"
                            android:gravity="center"
                            android:layout_centerVertical="true"
                            android:layout_marginTop="@dimen/_12sdp"
                            android:orientation="horizontal">
                            <ImageView
                                android:id="@+id/prevSoal"
                                android:foreground="?attr/selectableItemBackground"
                                android:layout_width="0dp"
                                android:visibility="visible"
                                android:layout_height="@dimen/_48sdp"
                                android:layout_weight="0.5"
                                android:onClick="prevSoal"
                                android:src="@drawable/ic_keyboard_arrow_left_white_24dp"/>
                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:layout_weight="4"
                                >
                                <TextView
                                    android:id="@+id/soal"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerInParent="true"
                                    android:text="Soal"
                                    android:padding="@dimen/_2sdp"
                                    android:layout_gravity="center"
                                    android:textAlignment="center"
                                    android:textColor="@color/white"
                                    android:textSize="@dimen/_17ssp" />
                                <RelativeLayout
                                    android:id="@+id/imgLayout2"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@+id/layoutTop">
                                    <ImageView
                                        android:layout_centerInParent="true"
                                        android:id="@+id/imgSoal"
                                        android:visibility="visible"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:src="@color/colorPrimary"
                                        android:maxHeight="@dimen/_110sdp"
                                        android:maxWidth="@dimen/_200sdp"
                                        >
                                    </ImageView>

                                </RelativeLayout>

                            </LinearLayout>
                            <ImageView
                                android:foreground="?attr/selectableItemBackground"
                                android:layout_width="0dp"
                                android:id="@+id/nextSoal"
                                android:visibility="visible"
                                android:onClick="nextSoal"
                                android:layout_height="@dimen/_48sdp"
                                android:layout_weight="0.5"
                                android:src="@drawable/ic_keyboard_arrow_right_white_24dp"/>
                        </LinearLayout>

                    </RelativeLayout>

                </RelativeLayout>
            </androidx.cardview.widget.CardView>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.45"
            android:background="@color/colorPrimary"
            android:orientation="vertical">

            <androidx.core.widget.NestedScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/carousel"
                android:layout_centerInParent="true"
                android:layout_marginTop="@dimen/_18sdp"

                android:fillViewport="true">

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/optionRV"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:nestedScrollingEnabled="false" />
            </androidx.core.widget.NestedScrollView>

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/fab"
                android:onClick="navigationSoal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_gravity="bottom|end"
                android:layout_marginEnd="@dimen/fab_margin"
                android:layout_marginBottom="@dimen/fab_margin"
                android:foreground="?attr/selectableItemBackground"
                app:srcCompat="@drawable/ic_assignment_white_64dp" />
        </RelativeLayout>


    </LinearLayout>

    <LinearLayout
        android:id="@+id/readyLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="visible">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/rubik_light"
            android:text="@string/get_ready"
            android:textColor="@color/dark_slate_gray"
            android:textSize="@dimen/_28ssp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/_30sdp"
            android:layout_marginEnd="@dimen/_8sdp"
            android:layout_marginStart="@dimen/_8sdp"
            android:fontFamily="@font/rubik_light"
            android:text="@string/game_desc"
            android:textAlignment="center"
            android:textColor="@color/gray"
            android:textSize="@dimen/_13ssp" />

        <ImageView
            android:id="@+id/imgReady"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_160sdp"
            android:src="@drawable/bg_ready" />

        <Button
            android:id="@+id/readyBtn"
            android:enabled="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="@dimen/_6sdp"
            android:layout_marginTop="@dimen/_8sdp"
            android:background="@drawable/btn_rounded_green"
            android:paddingLeft="@dimen/_28sdp"
            android:paddingRight="@dimen/_28sdp"
            android:text="@string/start"
            android:textColor="@color/white"
            android:visibility="visible" />

    </LinearLayout>


</LinearLayout>