<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LeaderboardActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/drop_shadow"
            android:orientation="vertical"
            android:paddingBottom="@dimen/_13sdp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/btnBack"
                    android:layout_width="@dimen/_24sdp"
                    android:layout_height="@dimen/_24sdp"
                    android:layout_margin="@dimen/_5sdp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:src="@drawable/ic_keyboard_arrow_left_black_24dp"
                    android:tint="@color/dim_gray" />

                <ImageView
                    android:layout_width="@dimen/_80sdp"
                    android:layout_height="@dimen/_80sdp"
                    android:layout_centerInParent="true"
                    android:layout_marginTop="@dimen/_23sdp"
                    android:src="@drawable/goblet2" />
            </RelativeLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/mitr_light"
                android:text="@string/leaderboard"
                android:textColor="@color/dark_slate_gray"
                android:textSize="@dimen/_18ssp" />

            <TextView
                android:id="@+id/gameName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/rubik_light"
                android:text="Game Name"
                android:textColor="@color/dark_slate_gray"
                android:textSize="@dimen/_15ssp" />
        </LinearLayout>

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fillViewport="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:baselineAligned="false"
                    android:orientation="horizontal"
                    android:paddingBottom="@dimen/_18sdp"
                    android:paddingTop="@dimen/_18sdp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="@dimen/_3sdp"
                        android:layout_weight="1"
                        android:gravity="bottom">

                        <FrameLayout
                            android:id="@+id/frLayout2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true">

                            <de.hdodenhof.circleimageview.CircleImageView
                                android:id="@+id/avatar2"
                                android:layout_width="@dimen/_75sdp"
                                android:layout_height="@dimen/_75sdp"
                                android:layout_gravity="center"
                                android:layout_marginBottom="@dimen/_3sdp"
                                android:padding="@dimen/_3sdp"
                                android:scaleType="centerCrop"
                                android:src="@drawable/ic_user"
                                app:civ_border_color="@color/light_grey"
                                app:civ_border_width="@dimen/_3sdp" />

                            <RelativeLayout
                                android:layout_width="@dimen/_26sdp"
                                android:layout_height="@dimen/_26sdp"
                                android:layout_gravity="bottom|center"
                                android:background="@drawable/circle_shape"
                                android:backgroundTint="@color/silver">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerInParent="true"
                                    android:fontFamily="@font/rubik_medium"
                                    android:text="2"
                                    android:textColor="@color/white"
                                    android:textSize="@dimen/_14ssp"
                                    android:textStyle="bold" />
                            </RelativeLayout>
                        </FrameLayout>

                        <TextView
                            android:id="@+id/name2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/frLayout2"
                            android:layout_marginTop="@dimen/_2sdp"
                            android:fontFamily="@font/rubik_regular"
                            android:text="Player 2"
                            android:textAlignment="center"
                            android:textColor="@color/dark_slate_gray"
                            android:textSize="@dimen/_14ssp" />

                        <TextView
                            android:id="@+id/score2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/name2"
                            android:fontFamily="@font/rubik_regular"
                            android:text="0"
                            android:textAlignment="center"
                            android:textColor="@color/dim_gray"
                            android:textSize="@dimen/_13ssp" />

                    </RelativeLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/_7sdp"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <FrameLayout
                            android:id="@+id/frLayout1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center">

                            <de.hdodenhof.circleimageview.CircleImageView
                                android:id="@+id/avatar1"
                                android:layout_width="@dimen/_100sdp"
                                android:layout_height="@dimen/_100sdp"
                                android:layout_marginBottom="@dimen/_8sdp"
                                android:scaleType="centerCrop"
                                android:src="@drawable/ic_user"
                                app:civ_border_color="@color/light_grey"
                                app:civ_border_width="@dimen/_3sdp" />

                            <RelativeLayout
                                android:layout_width="@dimen/_30sdp"
                                android:layout_height="@dimen/_30sdp"
                                android:layout_gravity="bottom|center"
                                android:background="@drawable/circle_shape"
                                android:backgroundTint="@color/gold">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerInParent="true"
                                    android:fontFamily="@font/rubik_medium"
                                    android:text="1"
                                    android:textColor="@color/white"
                                    android:textSize="@dimen/_16ssp"
                                    android:textStyle="bold" />
                            </RelativeLayout>

                        </FrameLayout>

                        <TextView
                            android:id="@+id/name1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/rubik_regular"
                            android:text="Player 1"
                            android:textAlignment="center"
                            android:textColor="@color/dark_slate_gray"
                            android:textSize="@dimen/_16ssp" />

                        <TextView
                            android:id="@+id/score1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/rubik_regular"
                            android:text="0"
                            android:textAlignment="center"
                            android:textColor="@color/dim_gray"
                            android:textSize="@dimen/_14ssp" />

                    </LinearLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="bottom">

                        <FrameLayout
                            android:id="@+id/frLayout3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true">

                            <de.hdodenhof.circleimageview.CircleImageView
                                android:id="@+id/avatar3"
                                android:layout_width="@dimen/_75sdp"
                                android:layout_height="@dimen/_75sdp"
                                android:layout_gravity="center"
                                android:layout_marginBottom="@dimen/_3sdp"
                                android:padding="@dimen/_3sdp"
                                android:scaleType="centerCrop"
                                android:src="@drawable/ic_user"
                                app:civ_border_color="@color/light_grey"
                                app:civ_border_width="@dimen/_3sdp" />

                            <RelativeLayout
                                android:layout_width="@dimen/_26sdp"
                                android:layout_height="@dimen/_26sdp"
                                android:layout_gravity="bottom|center"
                                android:background="@drawable/circle_shape"
                                android:backgroundTint="@color/bronze">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerInParent="true"
                                    android:fontFamily="@font/rubik_medium"
                                    android:text="3"
                                    android:textColor="@color/white"
                                    android:textSize="@dimen/_14ssp"
                                    android:textStyle="bold" />
                            </RelativeLayout>
                        </FrameLayout>

                        <TextView
                            android:id="@+id/name3"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/frLayout3"
                            android:layout_marginTop="@dimen/_2sdp"
                            android:text="Player 3"
                            android:textAlignment="center"
                            android:textColor="@color/dark_slate_gray"
                            android:textSize="@dimen/_14ssp" />

                        <TextView
                            android:id="@+id/score3"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/name3"
                            android:text="0"
                            android:textAlignment="center"
                            android:textColor="@color/dim_gray"
                            android:textSize="@dimen/_13ssp" />

                    </RelativeLayout>
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_2sdp"
                    android:layout_marginEnd="@dimen/_11sdp"
                    android:layout_marginStart="@dimen/_11sdp"
                    android:layout_marginTop="@dimen/_3sdp"
                    android:background="@color/light_grey" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/white"
                    android:orientation="vertical">

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/leaders"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:nestedScrollingEnabled="false">

                    </androidx.recyclerview.widget.RecyclerView>
                </LinearLayout>
            </LinearLayout>

        </androidx.core.widget.NestedScrollView>
    </LinearLayout>
</LinearLayout>